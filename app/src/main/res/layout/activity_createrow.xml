<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEDEB">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="@string/add_item"
        android:scaleType="center"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextText1"
        android:layout_width="388dp"
        android:layout_height="480dp"
        android:layout_marginTop="144dp"
        android:autofillHints=""
        android:background="@drawable/edittext_no_underline"
        android:ems="10"
        android:gravity="top"
        android:hint=" Body"
        android:inputType="textMultiLine"
        android:textColor="#1B1B1A"
        android:textColorHint="#2F3645"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:autofillHints=""
        android:background="#E6B9A6"
        android:importantForAutofill="no"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="390dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/edittext_no_underline"
        android:ems="10"
        android:color="#212020"
        android:hint=" Title"
        android:inputType="text"
        android:textColor="#212020"
        android:textColorHint="#2F3645"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="158dp"
        android:layout_height="36dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="653dp"
        android:layout_marginEnd="208dp"
        android:layout_marginBottom="42dp"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>